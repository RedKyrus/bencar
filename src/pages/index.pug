extends ../template/layout

mixin carListTitle(titleName, imgUrl)
  div.title-cont
    p.title=titleName 
    div.img-box
      img(src=`${imgPath}/main/${imgUrl}`, alt="브랜드")
  a(href="" class="more") 더보기 +

mixin carListInfoBox()
  li 
    div.img-box 
      img(src="", alt="이미지")
    div.car-info-box 
      p.name GLE
      p.price 월 89만원부터
    div.text-tip
      p.less 리스 
      p.lowest 최저가


